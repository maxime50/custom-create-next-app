{
	"name": "my-project",
	"version": "0.1.0",
	"private": "true",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"tsc": "tsc --pretty --noEmit",
		"fix:prettier": "prettier --write .",
		"postbuild": "next-sitemap",
		"postinstall": "husky install"
	},
	"dependencies": {
		"next": "^11.1.0",
		"next-seo": "^4.26.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"sharp": "^0.28.3"
	},
	"devDependencies": {
		"@types/node": "^16.6.1",
		"@types/react": "^17.0.17",
		"@types/react-dom": "^17.0.9",
		"@types/tailwindcss": "^2.2.1",
		"autoprefixer": "^10.3.1",
		"eslint-config-next": "^11.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-sonarjs": "^0.10.0",
		"eslint-plugin-unicorn": "^35.0.0",
		"eslint_d": "^10.1.3",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.2",
		"next-sitemap": "^1.6.148",
		"postcss": "^8.3.6",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-nesting": "^8.0.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.3.2",
		"tailwindcss": "^2.2.7",
		"typescript": "^4.3.5"
	},
	"engines": {
		"node": ">=14.x"
	},
	"lint-staged": {
		"**/*.{ts,tsx}": [
			"yarn tsc"
		],
		"**/*.{js,jsx,ts,tsx}": [
			"eslint_d",
			"prettier --write"
		],
		"**/*.{md,mdx,json}": [
			"prettier --write"
		]
	}
}
